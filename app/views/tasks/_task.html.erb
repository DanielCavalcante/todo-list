<li class=" <%= task.status %>">
	<%= check_box_tag 'task_ids[]', task.id, task.completed?, id: dom_id(task) %>
	<%= label_tag dom_id(task), task.title %>
	
	<span class="actions">
		<%= link_to t('actions.edit'), edit_task_path(task), class: 'edit' %>
		<%= link_to t('actions.remove'), remove_task_path(task), class: 'remove' %>
	</span>
</li>
