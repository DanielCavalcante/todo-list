<!DOCTYPE html>
<html lang="<%= I18n.locale %>">
	<head>
		<title>TodoList</title>
		<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
		<%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
		<%= csrf_meta_tags %>
		</head>
	<body>
		<section>
			<header>
				<h1><%= link_to 'taskv', root_path%></h1>
			</header>

			<nav>
				<%= link_to t('menu.signup'), signup_path %>
				<%= link_to t('menu.login'), login_path %>
			</nav>

			<% if logged_in? %>
				<%= current_user.name %>
				<%= button_to t('menu.logout'), logout_path, method: 'delete' %>
			<% end %>

			<% flash.each do |type, message| %>
				<p class="message message-<%= type %>">
					<%= message %>
				</p>
			<% end %>

			<%= yield %>
	</section>
	</body>
</html>
