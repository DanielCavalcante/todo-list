<h1> <%= t('login.title')%> </h1>

<p>
	<%= t('login.description') %>
</p>

<%= form_tag login_path do %>
	<div>
		<%= label_tag :email, t('labels.login.email') %>
		<%= text_field_tag :email %>
	</div>
	<div>
		<%= label_tag :password, t('labels.login.password') %>
		<%= password_field_tag :password %>
	</div>
	<p class="submit">
		<%= submit_tag t('helpers.submit.login'), class: 'button' %>
	</p>
<% end %>
